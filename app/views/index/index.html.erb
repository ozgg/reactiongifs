<% if @reactions.any? %>
    <ul class="reactions">
      <% @reactions.each do |reaction| %>
          <li>
            <figure>
              <figcaption>
                <span class="copy-to-clipboard" data-text="<%= reaction_url reaction %>" title="<%= t '.copy_link_to_clipboard' %>"></span>
                <%= link_to reaction.title, reaction %>
              </figcaption>
              <%= link_to(image_tag(reaction.image.url), reaction) %>
            </figure>
            <time datetime="<%= reaction.created_at %>"><%= reaction.created_at.strftime('%d.%m.%Y, %H:%M') %></time>
          </li>
      <% end %>
    </ul>
    <%= paginate @reactions %>
<% else %>
    <div class="notice">Реакций нет</div>
<% end %>
