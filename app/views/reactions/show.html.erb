<article class="reaction">
  <header>
    <h2><%= @reaction.title %></h2>
  </header>
  <figure>
    <%= image_tag @reaction.image.url, alt: @reaction.title %>
  </figure>
  <time datetime="<%= @reaction.created_at %>"><%= @reaction.created_at.strftime('%d.%m.%Y, %H:%M') %></time>
  <footer>
    <p><%= link_to 'На главную', root_path %></p>
  </footer>
</article>
